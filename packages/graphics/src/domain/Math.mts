/**
 * Returns the average of two numbers
 * @param x - first number
 * @param y - second number
 * @returns the average of x and y
 */
export const avg = (x: number, y: number) => (x + y) / 2;

/**
 * Integer division
 * @param a - dividend
 * @param b - divisor
 * @returns the integer division of a by b
 */
export const div = (a: number, b: number) => Math.floor(a / b);